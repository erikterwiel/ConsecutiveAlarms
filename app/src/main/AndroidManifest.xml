<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="erikterwiel.consecutivealarmsv20">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ConsecutiveAlarms">

        <activity
            android:name=".AlarmListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"/>

                <category
                    android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".EditAlarmActivity"
            android:label="@string/edit_alarm_activity_label"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".AlarmAlertActivity"
            android:showOnLockScreen="true"
            android:screenOrientation="portrait"/>

        <receiver
            android:name=".AlarmReceiver"/>

    </application>

</manifest>